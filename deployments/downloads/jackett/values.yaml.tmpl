---
podAnnotations:
  configmap.reloader.stakater.com/reload: "jackett-openvpnconf"
  secret.reloader.stakater.com/reload: "jackett-openvpnenv"
  replicas-max: "1"

service:
  port: 9117

env:
  TZ: "Europe/Amsterdam"
  PUID: "1031"
  PGID: "100"

persistence:
  type: deployment
  config:
    enabled: true
    existingClaim: config-jackett-0
  media:
    enabled: false

ingress:
  enabled: true
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: bjws-lan-ca-issuer
  hosts:
    - host: jackett.{{ (datasource "cluster-vars").domain.internal }}
      paths:
        - "/"
  tls:
    - secretName: tls.jackett
      hosts:
        - jackett.{{ (datasource "cluster-vars").domain.internal }}

resources:
  requests:
    memory: "256M"
  limits:
    memory: "512M"

additionalVolumeMounts:
  - mountPath: /shared
    name: shared
  - mountPath: /config/custom-cont-init.d
    name: custom-scripts

openvpn:
  enabled: true

  image:
    repository: dperson/openvpn-client
    tag: amd64
    pullPolicy: Always

  vpnConf: {{- (datasource "jackett").openvpn.config | strings.Indent 6 | printf " |\n%v" }}
  auth: {{- (datasource "jackett").openvpn.auth | strings.Indent 6 | printf " |\n%v" }}

  scripts:
    up:  |-
      #!/bin/bash
      /etc/openvpn/up.sh
      echo "connected" > /shared/vpnstatus
    down:  |-
      #!/bin/bash
      /etc/openvpn/down.sh
      echo "disconnected" > /shared/vpnstatus

  env:
    FIREWALL: "\"on\""
    ROUTE_1: "\"{{ (datasource "cluster-vars").networks.k8s_cluster }}\""
    ROUTE_2: "\"{{ (datasource "cluster-vars").networks.k8s_services }}\""
    ROUTE_3: "\"{{ (datasource "cluster-vars").networks.management_lan }}\""

  additionalVolumeMounts:
    - mountPath: /shared
      name: shared

  livenessProbe:
    exec:
      command:
      - sh
      - -c
      - if [ $(curl -s https://am.i.mullvad.net/country) == "Belgium" ]; then exit 0; else exit $?; fi
    initialDelaySeconds: 30
    periodSeconds: 60
    failureThreshold: 1

additionalVolumes:
  - name: shared
    emptyDir: {}
  - name: custom-scripts
    configMap:
      name: jackett-custom-scripts
      defaultMode: 511
