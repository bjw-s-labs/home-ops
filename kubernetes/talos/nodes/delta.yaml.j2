---
machine:
  install:
    diskSelector:
      model: Samsung SSD 870
  network:
    hostname: delta.bjw-s.internal
    interfaces:
      - # enigma
        deviceSelector:
          busPath: 0-1.0
        dhcp: false
        mtu: 65520
        addresses:
          - 169.254.255.21/32
        routes:
          - network: 169.254.255.22/32
            metric: 2048
      - # felix
        deviceSelector:
          busPath: 1-1.0
        dhcp: false
        mtu: 65520
        addresses:
          - 169.254.255.21/32
        routes:
          - network: 169.254.255.23/32
            metric: 2048
  nodeLabels:
    node.kubernetes.io/gpu: "true"
  type: controlplane
